{
    "extends": [
        "eslint:recommended",
        "airbnb",
        "next",
        "next/core-web-vitals",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "@typescript-eslint",
        "promise"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never",
                "jsx": "never",
                "tsx": "never"
            }
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".tsx"
                ]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 3,
                "maxEOF": 1,
                "maxBOF": 1
            }
        ],
        "no-use-before-define": "off",
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-props-no-spreading": "off",
        "react/no-danger": "off",
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "@next/next/no-img-element": "off",
        "lines-between-class-members": "off",
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true,
                "allowAfterSuper": true
            }
        ],
        "import/no-cycle": "off",
        "jsx-a11y/media-has-caption": "off",
        "@typescript-eslint/no-unused-vars": [
            "error"
        ],
        "class-methods-use-this": "off",
        "promise/always-return": "off",
        "promise/no-nesting": "off",
        "react-hooks/exhaustive-deps": ["warn", {
            "additionalHooks": "(useOnPageLoadedHook|useOnPageShownHook|useOnPageCreatedHook)"
        }]
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "no-undef": "off"
            }
        }
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx",
                    ".d.ts"
                ]
            }
        }
    }
}